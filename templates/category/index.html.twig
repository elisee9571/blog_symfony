{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="d-flex justify-content-around">
			{% for post in posts %}

				<div class="card text-center col-3">
					<div class="card-header">
						<span class="badge alert-secondary">
							Author:
							{{ app.user == post.user.username ? 'Moi' : post.user.username }}
						</span>
					</div>
					<div class="card-body">
						<h5 class="card-title">{{ post.title }}</h5>
						<p class="card-text">{{ post.content }}</p>
						<p class="card-text">{{ post.category.title }}</p>
					</div>
					<div class="card-footer text-muted">
						{{ post.createdAt }}
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}
